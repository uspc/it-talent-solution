# Copy this file to .env and update with your production values
# DO NOT commit .env to version control

# Application settings
NODE_ENV=production
PORT=3000

# Session security (generate a strong random string)
SESSION_SECRET=change-this-to-a-secure-random-string-in-production

# Email configuration (Gmail SMTP)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password

# Email recipient for contact forms
CONTACT_EMAIL=hr.ittalentsolution@gmail.com

# Company information
COMPANY_NAME=IT Talent Solution
COMPANY_ADDRESS=204 W Sherman Ave, Edison, NJ 08820
COMPANY_PHONE=(732) 986-9766

# Security settings
COOKIE_SECURE=true
TRUST_PROXY=true

# File upload settings
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=pdf,doc,docx

